<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:padding="8dp"
    card_view:cardBackgroundColor="@color/white_0"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="15dp"
    card_view:contentPadding="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/home_main_card_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            card_view:cardBackgroundColor="@color/primary_key"
            card_view:cardCornerRadius="4dp"
            card_view:contentPadding="3dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            >

            <TextView
                android:id="@+id/home_main_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="외출"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white_1"
                android:fontFamily="@font/intersemibold"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/home_main_card_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:fontFamily="@font/intersemibold"
            android:paddingStart="70dp"
            android:gravity="start"
            android:textColor="@color/black_2"
            android:text="김보호님은 현재 외출중입니다"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>