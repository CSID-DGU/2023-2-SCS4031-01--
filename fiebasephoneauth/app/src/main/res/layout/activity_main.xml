<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="13dp"
    android:background="@color/white_0"
    >

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/interextrabold"
        android:text="@string/Splash_title"
        android:textFontWeight="900"
        android:textColor="@color/black_2"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
    />

    <Button
        android:id="@+id/loginAsGuardianButton"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textFontWeight="900"
        android:background="@drawable/button_layout_primary"
        android:fontFamily="@font/intersemibold"
        android:paddingVertical="10dp"
        android:layout_marginEnd="76dp"
        android:layout_marginStart="76dp"
        android:elevation="15dp"
        android:text="@string/sign_in_as_guardian"
        android:textColor="@color/white_1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        />

    <Button
        android:id="@+id/loginAsCareReceiverButton"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textFontWeight="900"
        android:background="@drawable/button_layout_primary"
        android:fontFamily="@font/intersemibold"
        android:paddingVertical="10dp"
        android:layout_marginEnd="76dp"
        android:layout_marginStart="76dp"
        android:elevation="15dp"
        android:text="@string/sign_in_as_care_receiver"
        android:textColor="@color/white_1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginAsGuardianButton"
        />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="76dp"
        android:layout_marginTop="30dp"
        android:textFontWeight="900"
        android:background="@drawable/button_layout_primary"
        android:elevation="15dp"
        android:fontFamily="@font/intersemibold"
        android:padding="0dp"
        android:text="@string/Sign_up"
        android:textColor="@color/white_1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginAsCareReceiverButton"
        />


</androidx.constraintlayout.widget.ConstraintLayout>