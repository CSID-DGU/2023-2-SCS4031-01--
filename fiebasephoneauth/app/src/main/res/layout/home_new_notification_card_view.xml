<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_new_notification_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    android:padding="5dp"
    card_view:cardBackgroundColor="@color/white_0"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="15dp"
    card_view:contentPadding="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_new_notification_card_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_new_notification_date"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="2023-05-31"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black_2"
        android:fontFamily="@font/intersemibold"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintBottom_toTopOf="@+id/home_new_notification_time"
        />

    <TextView
        android:id="@+id/home_new_notification_time"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="12:00:00"
        android:layout_marginHorizontal="10dp"
        android:textColor="@color/black_2"
        android:fontFamily="@font/intersemibold"
        card_view:layout_constraintTop_toBottomOf="@+id/home_new_notification_date"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        />

        <TextView
            android:id="@+id/home_new_notification_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:fontFamily="@font/intersemibold"
            android:paddingStart="100dp"
            android:gravity="start"
            android:textColor="@color/black_2"
            android:text="움직임이 감지되었습니다"
            card_view:layout_constraintStart_toStartOf="@+id/home_new_notification_time"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>