<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guardian.page.GuardianSeeCareReceiversDetail">

    <TextView
        android:id="@+id/home_profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/profile"
        android:fontFamily="@font/interextrabold"
        android:textColor="@color/black_2"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/home_profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        app:contentPaddingTop="20dp"
        app:contentPaddingBottom="20dp"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/primary_key"
        app:layout_constraintTop_toBottomOf="@+id/home_profile_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guardian_profile"
                android:textColor="@color/white_0"
                android:textSize="20dp"
                android:fontFamily="@font/interextrabold"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:contentPaddingTop="5dp"
                app:contentPaddingBottom="5dp"
                app:contentPaddingLeft="10dp"
                app:contentPaddingRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white_0"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/guardian_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="@color/black_1"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        />

                    <TextView
                        android:id="@+id/guardian_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_2"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_phone_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPaddingTop="5dp"
                app:contentPaddingBottom="5dp"
                app:contentPaddingLeft="10dp"
                app:contentPaddingRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white_0"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/guardian_phone_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number"
                        android:textColor="@color/black_1"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        />

                    <TextView
                        android:id="@+id/guardian_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_2"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/care_receiver_profile"
                android:textColor="@color/white_0"
                android:textSize="20dp"
                android:fontFamily="@font/interextrabold"
                android:layout_marginTop="20dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/care_receiver_name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPaddingTop="5dp"
                app:contentPaddingBottom="5dp"
                app:contentPaddingLeft="10dp"
                app:contentPaddingRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white_0"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/care_receiver_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="@color/black_1"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        />

                    <TextView
                        android:id="@+id/care_receiver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_2"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/care_receiver_phone_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPaddingTop="5dp"
                app:contentPaddingBottom="5dp"
                app:contentPaddingLeft="10dp"
                app:contentPaddingRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white_0"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/care_receiver_phone_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number"
                        android:textColor="@color/black_1"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        />

                    <TextView
                        android:id="@+id/care_receiver_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_2"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/care_receiver_address_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPaddingTop="5dp"
                app:contentPaddingBottom="5dp"
                app:contentPaddingLeft="10dp"
                app:contentPaddingRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white_0"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/care_receiver_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address"
                        android:textColor="@color/black_1"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        />

                    <TextView
                        android:id="@+id/care_receiver_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_2"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/care_giver_profile"
                android:textColor="@color/white_0"
                android:textSize="20dp"
                android:fontFamily="@font/interextrabold"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/care_giver_name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPaddingTop="5dp"
                app:contentPaddingBottom="5dp"
                app:contentPaddingLeft="10dp"
                app:contentPaddingRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white_0"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/care_giver_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="@color/black_1"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        />

                    <TextView
                        android:id="@+id/care_giver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_2"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/care_giver_phone_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:contentPaddingTop="5dp"
                app:contentPaddingBottom="5dp"
                app:contentPaddingLeft="10dp"
                app:contentPaddingRight="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white_0"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/care_giver_phone_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number"
                        android:textColor="@color/black_1"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        />

                    <TextView
                        android:id="@+id/care_giver_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_2"
                        android:textSize="15dp"
                        android:fontFamily="@font/interextrabold"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/back_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/back"
                android:textColor="@color/white_0"
                android:textSize="15dp"
                android:fontFamily="@font/interextrabold"
                android:background="@drawable/button_layout_secondary"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="50dp"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>